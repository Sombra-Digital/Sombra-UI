{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "declaration": true,              // Включаем генерацию деклараций
    "emitDeclarationOnly": true,      // Генерируем только декларации
    "noEmit": false,                  // Отключаем noEmit
    "outDir": "dist",                  // Указываем выходную директорию
    "declarationDir": "dist",          // Указываем директорию для деклараций
    "composite": true,
    "jsx": "preserve",
    "baseUrl": ".",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.tsx",
    "src/**/*.vue"
  ]
}
